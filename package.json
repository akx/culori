{
	"name": "culori",
	"version": "0.18.1",
	"main": "build/culori.umd.js",
	"browser": "build/culori.umd.js",
	"module": "build/culori.js",
	"repository": "git@github.com:Evercoder/culori.git",
	"author": "Dan Burzo <danburzo@gmail.com>",
	"description": "A general-purpose color library for JavaScript",
	"keywords": [
		"blend",
		"ciede2000",
		"cielab",
		"color",
		"color-difference",
		"cubehelix",
		"din99",
		"gradients",
		"hsi",
		"hsl",
		"hsv",
		"hwb",
		"interpolation",
		"lab",
		"lch",
		"lrgb",
		"mix",
		"rgb",
		"yiq"
	],
	"license": "MIT",
	"files": [
		"build"
	],
	"devDependencies": {
		"@11ty/eleventy": "^0.11.0",
		"@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
		"@rollup/plugin-buble": "^0.21.3",
		"@rollup/plugin-typescript": "^8.2.0",
		"@typescript-eslint/eslint-plugin": "^4.16.1",
		"@typescript-eslint/parser": "^4.16.1",
		"eslint": "^7.16.0",
		"esm": "^3.2.25",
		"gh-pages": "^3.1.0",
		"husky": "^4.2.5",
		"nyc": "^15.1.0",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"rollup": "^2.21.0",
		"rollup-plugin-terser": "^6.1.0",
		"tap-spec": "^5.0.0",
		"tape": "^5.0.1",
		"ts-node": "^9.1.1",
		"tslib": "^2.1.0",
		"typescript": "^4.2.3"
	},
	"scripts": {
		"build": "rollup -c",
		"test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\", \"allowJs\": true}' TS_NODE_TRANSPILE_ONLY=true ts-node node_modules/tape/bin/tape 'test/*.js' | tap-spec",
		"benchmark": "node benchmark/index.js",
		"prepublishOnly": "npm run build && npm run test",
		"coverage:report": "nyc report --reporter=lcov",
		"coverage:test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\", \"allowJs\": true}' TS_NODE_TRANSPILE_ONLY=true nyc --produce-source-map tape --require ts-node/register -r esm 'test/*.js' | tap-spec",
		"docs:start": "eleventy --serve",
		"docs:build": "rm -rf www && eleventy",
		"docs:deploy": "npm run docs:build && gh-pages -d www --dotfiles",
		"lint": "eslint {src,test}/**/*.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"printWidth": 80
	},
	"sideEffects": false
}
